<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/rosequartz"
    android:gravity="center"
    android:paddingTop="100dp"
    tools:context="com.example.miran.bottombar.PasswordActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호를 입력하세요"
        android:textSize="30dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/pwd_notify"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="60sp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/star1"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="60sp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/star2"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="60sp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/star3"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="60sp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/star4"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <TableLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content">
        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:textSize="40sp"
                android:background="@color/rosequartz"
                android:textColor="@color/deepPink"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:id="@+id/one"
                android:onClick="btnClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:textSize="40sp"
                android:background="@color/rosequartz"
                android:textColor="@color/deepPink"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:id="@+id/two"
                android:onClick="btnClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:textSize="40sp"
                android:background="@color/rosequartz"
                android:textColor="@color/deepPink"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:id="@+id/three"
                android:onClick="btnClick"/>
        </TableRow>
        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4"
                android:textSize="40sp"
                android:background="@color/rosequartz"
                android:textColor="@color/deepPink"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:id="@+id/four"
                android:onClick="btnClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5"
                android:textSize="40sp"
                android:background="@color/rosequartz"
                android:textColor="@color/deepPink"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:id="@+id/five"
                android:onClick="btnClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6"
                android:textSize="40sp"
                android:background="@color/rosequartz"
                android:textColor="@color/deepPink"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:id="@+id/six"
                android:onClick="btnClick"/>
        </TableRow>
        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7"
                android:textSize="40sp"
                android:background="@color/rosequartz"
                android:textColor="@color/deepPink"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:id="@+id/seven"
                android:onClick="btnClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8"
                android:textSize="40sp"
                android:background="@color/rosequartz"
                android:textColor="@color/deepPink"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:id="@+id/eight"
                android:onClick="btnClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9"
                android:textSize="40sp"
                android:background="@color/rosequartz"
                android:textColor="@color/deepPink"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:id="@+id/nine"
                android:onClick="btnClick"/>
        </TableRow>
        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="40sp"
                android:background="@color/rosequartz"
                android:textColor="@color/deepPink"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textSize="40sp"
                android:background="@color/rosequartz"
                android:textColor="@color/deepPink"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:id="@+id/zero"
                android:onClick="btnClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="X"
                android:textSize="40sp"
                android:background="@color/rosequartz"
                android:textColor="@color/deepPink"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:id="@+id/backspace"
                android:onClick="btnClick"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
